<% slide.media_assets.each do |asset| %>
  <figure>
    <img src="<%= asset['url'] %>" alt="<%= slide['Headline'] %>" />
  </figure>
<% end %>
<% frame = slide["Headline"].split('___') %>
<% choices = slide["Flags"].split(',').shuffle %>
<article>
  <header>
    <h1>
      <%= frame.first %>
        <span class="indecision">
          <% choices.each_with_index do |choice, index| %>
            <span class="indecision-choice <%= 'is-active' if index == 0 %>">
              <%= choice %>
            </span>
          <% end %>
        </span>
      <%= frame.last %>
    </h1>
  </header>
  <%= markdown slide['Body'] %>
</article>
