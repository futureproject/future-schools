<% slide.media_assets.each do |asset| %>
  <figure>
    <img src="<%= asset['url'] %>" alt="<%= slide['Headline'] %>" />
  </figure>
<% end %>
<% frame = slide["Headline"].split('___') %>
<% choices = slide["Flags"].split(',').shuffle %>
<article data-choices="<%= choices.join(',') %>">
  <header>
    <h1>
      <%= frame.first %>
        <span class="indecision">
          <span class="indecision-choice"><%= choices.first %></span>
        </span>
      <%= frame.last %>
    </h1>
  </header>
  <%= markdown slide['Body'] %>
</article>
